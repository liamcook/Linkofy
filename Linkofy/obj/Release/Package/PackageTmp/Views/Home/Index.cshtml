@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1 align="center">Linkofy<h1>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Links</h2>
        <p>
            Read through your documented links and see what you've built recently.
        </p>
        <p><a class="btn btn-default" @Html.ActionLink("Links", "Index","Links")</a></p>
    </div>
    <div class="col-md-6">
        <h2>Domains</h2>
        <p>View your documented domains to see where they are pointing and where else they can.</p>
        <p><a class="btn btn-default" @Html.ActionLink("Domains", "Index","Identifiers")</a></p>
    </div>
    </div>
<div class="row">
    <div class="col-md-6">
        <h2>Clients</h2> 
        <p>See what you build for your clients with keyword and metric analysis</p>
        <p><a class="btn btn-default" @Html.ActionLink("Clients", "Index","Clients")</a></p>
    </div>
        <div class="col-md-6">
        <h2>Links in Build</h2> 
        <p>Add, amend or push live any links that are currently in build.</p>
        <p><a class="btn btn-default" @Html.ActionLink("In Build", "Index","Status")</a></p>
    </div>
    </div>
    <div class="row">
    <div class="col-md-6">
        <h2>Outreach List</h2> 
        <p>View your outreach lists</p>
        <p><a class="btn btn-default" @Html.ActionLink("Outreach", "Index","Outreach")</a></p>
    </div>
        <div class="col-md-6">
        <h2>Email Accounts</h2> 
        <p>View your email accounts</p>
        <p><a class="btn btn-default" @Html.ActionLink("EmailAccounts", "Index","EmailAccounts")</a></p>
    </div>
        </div>
    <div class="row">
    <div class="col-md-6">
        <h2>Templates</h2> 
        <p>View your email templates</p>
        <p><a class="btn btn-default" @Html.ActionLink("Templates", "Index","Templates")</a></p>
    </div>
        <div class="col-md-6">
        <h2>Automated Outreach</h2> 
        <p>See your automated email campaigns</p>
        <p><a class="btn btn-default" @Html.ActionLink("AutoEmails", "Index","AutoEmails")</a></p>
    </div>
        </div>
    <div class="row">
    <div class="col-md-6">
        <h2>Shared Lists</h2> 
        <p>View your shared lists</p>
        <p><a class="btn btn-default" @Html.ActionLink("Go", "Index","Shared", new { @class= "glyphicon glyphicon-trash" })</a></p>
    </div>

        <div class="col-md-6">
        <h2>Blacklist</h2> 
        <p>View domains you've blacklisted</p>
        <p><a class="btn btn-default" @Html.ActionLink("Blacklist", "Index","Blacklist")</a></p>
    </div>
            </div>
