@model Linkofy.Models.Identifier

@{
    ViewBag.Title = "Details";
}
@section Styles {
    <link href="@Url.Content("~/Styles/Details.css")" rel="stylesheet" type="text/css" />
}

<h1>@Html.DisplayFor(model => model.domain)</h1>
<p class="options">@Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |  @Html.ActionLink("Back to List", "Index")</p>

<div class="row">
    <div class="col-md-12">
        <table class="displayrow">
            <tr><th><h4>@Html.DisplayNameFor(model => model.contactname)</h4></th>
                <th><h4>@Html.DisplayNameFor(model => model.contact)</h4></th>
                <th><h4>@Html.DisplayNameFor(model => model.price)</h4></th>
                <th><h4>@Html.DisplayNameFor(model => model.type)</h4></th>
                <th><h4>@Html.DisplayNameFor(model => model.TrustFlow)</h4></th>
                <th><h4>@Html.DisplayNameFor(model => model.CitationFlow)</h4></th>
                <th><h4>@Html.DisplayNameFor(model => model.RI)</h4></th>
                <th><h4>@Html.DisplayNameFor(model => model.MJTopics.topicalTF)</h4></th>
            </tr>
            <tr><td><h5>@Html.DisplayFor(model => model.contactname)</h5></td>
                <td><h5>@Html.DisplayFor(model => model.contact)</h5></td>
                <td><h5>@Html.DisplayFor(model => model.price)</h5></td>
                <td><h5>@Html.DisplayFor(model => model.type)</h5></td>
                <td><h5>@Html.DisplayFor(model => model.TrustFlow)</h5></td>
                <td><h5>@Html.DisplayFor(model => model.CitationFlow)</h5></td>
                <th><h5>@Html.DisplayFor(model => model.RI)</h5></th>
                <td><h5>@Html.DisplayFor(model => model.MJTopics.topicalTF)</h5></td>
            </tr>
        </table>
    </div>
        </div>

    <div class="col-md-12">
<h3>Links Built</h3>
        <table class="table">
            <tr>
                <th>Page Containing Link</th>
                <th>Client</th>
                <th>Outbound URL</th>
                <th>Anchor Text</th>
                <th>Date</th>
                <th>Action</th>
                    </tr>

            @foreach (var item in Model.Links) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Obdomain)
                </td>
                                          <td>
                    @Html.DisplayFor(modelItem => item.Client.clientN)
                </td>
                                                          <td>
                    @Html.DisplayFor(modelItem => item.Obpage)
                </td>
                                <td>
                    @Html.DisplayFor(modelItem => item.Anchor)
                </td>
                          <td>
                    @Html.DisplayFor(modelItem => item.BuildDate.Date)
                </td>
                                                        <td>
            @Html.ActionLink("Edit", "Edit", "Status", new { id=item.LinkID }) |
            @Html.ActionLink("Domain", "Details", "Status", new { id=item.LinkID }) |
            @Html.ActionLink("Delete", "Delete", "Status", new { id=item.LinkID })
        </td>
            </tr>
            }
        </table>
</div>